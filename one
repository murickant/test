from flask import Flask, jsonify, request
import requests

app = Flask(__name__)

# ðŸ”‘ Your ParseHub API Key & Project Token
PARSEHUB_API_KEY = "your_parsehub_api_key"
PROJECT_TOKEN = "your_project_token"
BASE_URL = "https://www.parsehub.com/api/v2"

# ðŸš€ Start a ParseHub run
@app.route('/start_run', methods=['POST'])
def start_run():
    url = f"{BASE_URL}/projects/{PROJECT_TOKEN}/run"
    params = {"api_key": PARSEHUB_API_KEY}
    response = requests.post(url, params=params)
    return jsonify(response.json())

# ðŸ“Š Get the last ready run data
@app.route('/last_ready_data', methods=['GET'])
def get_last_ready_data():
    url = f"{BASE_URL}/projects/{PROJECT_TOKEN}/last_ready_run/data"
    params = {"api_key": PARSEHUB_API_KEY, "format": "json"}
    
    response = requests.get(url, params=params)
    
    if response.status_code == 200:
        return jsonify(response.json())
    else:
        return jsonify({"error": "Failed to retrieve data", "status_code": response.status_code})

if __name__ == '__main__':
    app.run(debug=True)
